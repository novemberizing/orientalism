<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    Theme.MaterialComponents.DayNight.DarkActionBar-->
    <style name="Theme.Orientalism" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_600</item>
        <item name="colorPrimaryVariant">@color/gray_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_700</item>
        <item name="colorSecondaryVariant">@color/gray_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/gray_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_100</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="dividerColor">@color/gray_200</item>
        <item name="realBackground">@color/gray_50</item>
    </style>
    <style name="Theme.Orientalism.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>